<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Contactos"
                    android:textSize="32dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"/>

                <LinearLayout
                    android:id="@+id/contacto_uno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_contact_phone"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="Nombre Contacto"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:id="@+id/nombre_contacto_uno"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="Numero Contacto"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:id="@+id/numero_contacto_uno"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contacto_dos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_contact_phone"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="Nombre Contacto"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:id="@+id/nombre_oontacto_dos"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="Numero Contacto"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:id="@+id/numero_contacto_dos"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contacto_tres"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_contact_phone"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="Nombre Contacto"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:id="@+id/nombre_contacto_tres"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="Numero Contacto"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:id="@+id/numero_contacto_tres"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_next_alergic"
                android:layout_margin="10dp"
                android:text="Siguiente"
                android:layout_alignParentBottom="true"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>


    </FrameLayout>


</RelativeLayout>